    <div class="wrapper bg-white">
    <div class="h2 text-center">Are You A Influancer ?</div>
    <div class="h2 text-center">Join Us..</div>
    {{!-- <div class="h5 font-weight-bold">Registration</div>
    <div class="text-muted">Enter your registration details</div> --}}
    <form action="contact" method="post">
        <div class="d-sm-flex align-items-sm-center justify-content-sm-between pt-1">
            <div class="form-group">
                <label class="text-muted mandatory" name="name">Name</label>
                <input type="text" required class="form-control">
            </div>
            <div class="form-group">
                <label class="text-muted mandatory" name="email">Email Address</label>
                <input type="email" required class="form-control">
            </div>
        </div>
        <div class="d-sm-flex align-items-sm-center justify-content-sm-between pt-1">
            <div class="form-group">
                <label class="text-muted">Gender</label>
                <input type="text" class="form-control" name="gender">
            </div>
            <div class="form-group">
                <label class="text-muted">Date of Birth</label>
                <input type="text" class="form-control" name="dob">
            </div>
        </div>
        <div class="d-sm-flex align-items-sm-center justify-content-sm-between pt-1">
            <div class="form-group">
                <label class="text-muted mandatory">Phone Number</label>
                <input type="tel" required class="form-control" name="number">
            </div>
            <div class="form-group">
                <label class="text-muted">City</label>
                <input type="text" class="form-control" name="city">
            </div>
        </div>
        <div class="form-group">
            <label class="text-muted mandatory">Minimum Amout For Add..(In Rupees)</label>
            <input type="text" required class="form-control" name="amount">
        </div>
        <div class="d-flex justify-content-sm-end button-section mt-2">
            <button class="btn btn-primary mx-4" type="submit">Submit</button>
        </div>
    </form>
    
</div>
